---
import type { PrintableMetadata } from '../types/printable';

interface Props {
  printable: PrintableMetadata;
}

const { printable } = Astro.props;
---

<a
  href={printable.url}
  target="_blank"
  rel="noopener noreferrer"
  class="group bg-surface rounded-lg shadow-soft hover:shadow-soft-lg transition-all duration-300 overflow-hidden h-full flex flex-col border border-slate-600 hover:border-primary-500 hover:scale-[1.02] cursor-pointer"
>
  {printable.image && (
    <div class="w-full h-48 overflow-hidden bg-slate-700">
      <img
        src={printable.image}
        alt={printable.title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
    </div>
  )}

  <div class="p-6 flex flex-col flex-grow">
    <h3 class="text-xl font-bold mb-3 leading-tight text-title group-hover:text-primary-400 transition-colors duration-200">
      {printable.title}
    </h3>

    <div class="flex items-center justify-end text-sm pt-4 border-t border-slate-600 mt-auto">
      <span class="text-title group-hover:text-primary-400 font-semibold inline-flex items-center group-hover:translate-x-1 transition-all duration-200">
        View on Printables
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </span>
    </div>
  </div>
</a>

