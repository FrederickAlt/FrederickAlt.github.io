---
// Pagefind search component
---

<div class="relative">
  <div id="search" class="w-64"></div>
</div>

<script>
  // Initialize Pagefind search
  window.addEventListener('DOMContentLoaded', () => {
    // @ts-ignore - Pagefind is loaded via CDN
    if (typeof PagefindUI !== 'undefined') {
      // @ts-ignore
      new PagefindUI({
        element: '#search',
        showSubResults: true,
        showImages: false,
        excerptLength: 15,
        resetStyles: false,
      });
    }
  });
</script>

<style is:global>
  /* Pagefind custom styling - Dark theme */
  #search {
    --pagefind-ui-scale: 0.9;
    --pagefind-ui-primary: #22d3ee;
    --pagefind-ui-text: #e2e8f0;
    --pagefind-ui-background: #2d3235;
    --pagefind-ui-border: #475569;
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 0.5rem;
    --pagefind-ui-font: system-ui, -apple-system, sans-serif;
  }

  .pagefind-ui__search-input {
    border-radius: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    background: #383d41;
    color: #e2e8f0;
  }

  .pagefind-ui__search-input:focus {
    outline: 2px solid #22d3ee;
    outline-offset: 2px;
  }

  .pagefind-ui__result {
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 0.5rem;
    background: #2d3235;
  }

  .pagefind-ui__result:hover {
    background: #383d41;
  }

  .pagefind-ui__result-title {
    font-weight: 600;
    color: #0891b2;
  }

  .pagefind-ui__result-link {
    text-decoration: none;
  }

  .pagefind-ui__result-excerpt {
    color: #cbd5e1;
  }
</style>
