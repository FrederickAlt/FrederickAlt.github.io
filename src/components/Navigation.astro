---
import { getCollection } from 'astro:content';
import Search from './Search.astro';

// Get all blog posts to extract unique topics
const allPosts = await getCollection('blog');
const allTopics = [...new Set(allPosts.flatMap(post => post.data.topics))].sort();
---

<nav class="bg-surface shadow-soft-lg border-b border-slate-600 sticky top-0 z-50 backdrop-blur-sm bg-surface/95">
  <div class="max-w-7xl mx-auto px-8 lg:px-12">
    <div class="flex items-center justify-between h-20">
      <div class="flex items-center space-x-16">
        <a href="/" class="text-4xl font-bold text-title hover:text-primary-400 transition-colors duration-200">
          Blog
        </a>

        <div class="hidden md:flex items-center space-x-12">
          <a href="/" class="text-xl text-title hover:text-primary-400 transition-colors duration-200 font-medium">
            Home
          </a>

          <div class="relative group">
            <a href="/topics" class="text-xl text-title hover:text-primary-400 transition-colors duration-200 flex items-center font-medium">
              Topics
              <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </a>

            <!-- Dropdown -->
            <div class="absolute left-0 mt-3 w-64 bg-surface-hover rounded-lg shadow-soft-lg border border-slate-600 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="py-2">
                {allTopics.map(topic => (
                  <a
                    href={`/topics/${topic.toLowerCase().replace(/\s+/g, '-')}`}
                    class="block px-5 py-3 text-base text-title hover:bg-background-light hover:text-primary-400 transition-colors duration-150"
                  >
                    {topic}
                  </a>
                ))}
              </div>
            </div>
          </div>

          <a href="/printables" class="text-xl text-title hover:text-primary-400 transition-colors duration-200 font-medium">
            Printables
          </a>

          <a href="/about" class="text-xl text-title hover:text-primary-400 transition-colors duration-200 font-medium">
            About
          </a>
        </div>
      </div>

      <!-- Search component -->
      <div class="hidden md:block">
        <Search />
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden text-title hover:text-primary-400 transition-colors">
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-slate-600 mt-2 pt-4">
      <a href="/" class="block py-3 text-lg text-title hover:text-primary-400 transition-colors font-medium">
        Home
      </a>
      <div>
        <a href="/topics" class="block py-3 text-lg text-title hover:text-primary-400 transition-colors font-medium">
          Topics
        </a>
        <div class="pl-4 space-y-1 mt-2">
          {allTopics.map(topic => (
            <a
              href={`/topics/${topic.toLowerCase().replace(/\s+/g, '-')}`}
              class="block py-2 text-sm text-title hover:text-primary-400 transition-colors"
            >
              {topic}
            </a>
          ))}
        </div>
      </div>
      <a href="/printables" class="block py-3 text-lg text-title hover:text-primary-400 transition-colors font-medium">
        Printables
      </a>
      <a href="/about" class="block py-3 text-lg text-title hover:text-primary-400 transition-colors font-medium">
        About
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    const menu = document.getElementById('mobile-menu');
    menu?.classList.toggle('hidden');
  });
</script>
