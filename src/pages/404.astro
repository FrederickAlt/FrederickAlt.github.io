---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
    <div class="mb-8">
      <h1 class="text-9xl font-bold text-title mb-4">404</h1>
      <div class="h-1 w-32 bg-primary-400 mx-auto mb-8"></div>
    </div>

    <h2 class="text-3xl font-bold text-slate-200 mb-4">
      Page Not Found
    </h2>

    <p class="text-xl text-slate-300 mb-12 max-w-md leading-relaxed">
      The page you're looking for doesn't exist or has been moved.
    </p>

    <div class="flex gap-4 flex-wrap justify-center">
      <a
        href="/"
        class="bg-title hover:bg-primary-400 text-white font-semibold py-3 px-8 rounded-lg transition-all duration-200 hover:scale-105 shadow-soft"
      >
        Go Home
      </a>
      <a
        href="/topics"
        class="bg-surface hover:bg-surface-hover text-title hover:text-primary-400 font-semibold py-3 px-8 rounded-lg border border-slate-600 hover:border-primary-500 transition-all duration-200"
      >
        Browse Topics
      </a>
    </div>
  </div>
</BaseLayout>
