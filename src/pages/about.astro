---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../../site.config';
import AboutContent from '../content/about.mdx';
---

<BaseLayout
  title={siteConfig.pages.about.title}
  description={siteConfig.pages.about.description}
  keywords={siteConfig.pages.about.keywords}
>
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-title mb-12 tracking-tight">
      About Me
    </h1>

    <div class="flex flex-col md:flex-row gap-8 items-start">
      <!-- Left sidebar: Image and contact -->
      <div class="flex-shrink-0 w-full md:w-64">
        <!-- Profile Image -->
        <img
          src="/images/profile.jpg"
          alt="Frederick Altrock"
          class="w-full aspect-[1/1.3] object-cover rounded-lg mb-6"
        />

        <!-- Contact info -->
        {(siteConfig.contact.email || siteConfig.contact.linkedin || siteConfig.contact.github) && (
          <div class="space-y-4">
            <h3 class="text-xl font-bold text-slate-100">Contact</h3>
            <div class="space-y-3">
              {siteConfig.contact.email && (
                <a href={`mailto:${siteConfig.contact.email}`} class="flex items-center gap-3 text-slate-300 hover:text-primary transition-colors group">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                  </svg>
                  <span class="text-sm">{siteConfig.contact.email}</span>
                </a>
              )}
              {siteConfig.contact.linkedin && (
                <a href={siteConfig.contact.linkedin} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-slate-300 hover:text-primary transition-colors group">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                  <span class="text-sm">LinkedIn</span>
                </a>
              )}
              {siteConfig.contact.github && (
                <a href={siteConfig.contact.github} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-slate-300 hover:text-primary transition-colors group">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  <span class="text-sm">GitHub</span>
                </a>
              )}
            </div>
          </div>
        )}
      </div>

      <!-- Right column: About text box and CV -->
      <div class="flex-grow space-y-8">
        <!-- About text box -->
        <div class="bg-surface rounded-lg shadow-soft-lg p-10 border border-slate-600">
          <div class="about-content">
            <AboutContent />
          </div>
        </div>

        <!-- CV Download Box -->
        {siteConfig.contact.cv && (
          <a href={siteConfig.contact.cv} download class="block bg-surface rounded-lg shadow-soft-lg px-5 py-3 border border-slate-600 hover:border-primary-500 transition-all duration-300 group">
            <div class="grid grid-cols-[auto_1fr_auto] items-center gap-5">
              <svg class="w-11 h-11 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <span class="text-slate-200 font-semibold text-[1.8rem] leading-tight text-center">Download my full resume here</span>
              <div class="w-[4.5rem] h-[4.5rem] bg-primary-500/20 border-2 border-primary-500/40 rounded-full flex items-center justify-center group-hover:bg-primary-500/30 group-hover:border-primary-400/60 transition-colors">
                <svg class="w-9 h-9 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
            </div>
          </a>
        )}
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .about-content {
    color: rgb(203 213 225); /* text-slate-300 */
  }

  .about-content :global(h2) {
    font-size: 1.875rem; /* text-3xl */
    font-weight: 700;
    color: #0891b2; /* text-title - dark cyan */
    margin-bottom: 1.5rem;
  }

  .about-content :global(h3) {
    font-size: 1.5rem; /* text-2xl */
    font-weight: 700;
    color: #0891b2; /* text-title - dark cyan */
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .about-content :global(p) {
    line-height: 1.75;
    margin-bottom: 1rem;
  }
</style>
